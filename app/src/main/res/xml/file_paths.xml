<?xml version="1.0" encoding="utf-8"?>

<paths xmlns:android="http://schemas.android.com/apk/res/android">>

    <!--
     <files-path/>代表的根目录： Context.getFilesDir()
     <external-path/>代表的根目录: Environment.getExternalStorageDirectory()
     <cache-path/>代表的根目录: getCacheDir()
     <external-cache-path/>代表的根目录:Context.getExternalCacheDir()
     <external-files-path/>代表的根目录:Context.getExternalFilesDir(null)
     更多类型参考：https://blog.csdn.net/Next_Second/article/details/78585745
     -->
    <files-path name="files" path="." />
    <external-path
        name="external_files"
        path="." />

    <!-- context.getFilesDir + /Log/ and /Record/ -->
    <files-path name="name" path="." />

    <!-- context.getExternalFilesDir + /Log/ -->
    <external-files-path name="name" path="Log" />

    <!-- context.getFilesDir + /Log/ and /Record/ -->
    <cache-path name="name" path="." />
</paths>